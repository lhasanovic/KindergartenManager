<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@/css/stylesheet.css" />
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <children>
        <Label text="First name:" />
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" />
        <Label text="Last name:" GridPane.rowIndex="1" />
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Parent name:" GridPane.rowIndex="2" />
        <TextField fx:id="parentNameField" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Date of birth:" GridPane.rowIndex="3" />
        <DatePicker fx:id="birthDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="Phone number:" GridPane.rowIndex="4" />
        <TextField fx:id="phoneNumberField" promptText="eg. 38761889825" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Teacher:" GridPane.rowIndex="6" />
        <ChoiceBox fx:id="teacherChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <Label text="Special needs:" GridPane.rowIndex="5" />
        <TextField fx:id="specialNeedsField" promptText="Leave empty for none" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="7">
            <buttons>
                <Button fx:id="okBtn" mnemonicParsing="false" onAction="#actionOk" text="Ok" />
                <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#actionCancel" text="Cancel" />
            </buttons>
        </ButtonBar>
    </children>
    <opaqueInsets>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>
